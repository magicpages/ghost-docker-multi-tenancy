# Ghost Multi-Tenant Configuration

# MySQL Database Configuration
MYSQL_ROOT_PASSWORD=your_super_secure_root_password_here
MYSQL_USER=ghost
MYSQL_PASSWORD=your_secure_ghost_password_here
MYSQL_PORT=3306

# Tinybird Local Analytics Configuration
TINYBIRD_ADMIN_TOKEN=your_tinybird_admin_token_here
TINYBIRD_TRACKER_TOKEN=your_tinybird_tracker_token_here
TINYBIRD_PORT=7181
TRAFFIC_ANALYTICS_PORT=3001
SALT_STORE_TYPE=file
LOG_LEVEL=info

# Email Configuration (Optional)
# Configure these if you want Ghost sites to send emails
MAIL_TRANSPORT=SMTP
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=postmaster@mg.yourdomain.com
MAIL_PASSWORD=your_mailgun_password

# Development Settings (Optional)
# Uncomment for local development
# MYSQL_PORT=3307
# NODE_ENV=development